<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate_grey">

    <TextView
        style="@style/Theme.ChallengeHiking.FrameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/std_dp"
        android:text="@string/delete_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/Theme.ChallengeHiking.FrameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/top_input_dp"
        android:text="***WARNING***\nTHIS ACTION IS PERMANENT!"
        android:textAlignment="center"
        android:textColor="@color/error_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pwd_delete_input"
        android:layout_width="@dimen/input_dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:hint="@string/enter_password_to_confirm"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:textColor="@color/error_red"
        android:textColorHint="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/delete_submit_btn"
        android:layout_width="@dimen/btn_wt"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/std_dp"
        android:backgroundTint="@color/error_red"
        android:text="@string/submit"
        android:textColor="@color/yellow_mark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pwd_delete_input" />


</androidx.constraintlayout.widget.ConstraintLayout>