<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/unit_dp"
    app:cardBackgroundColor="@color/light_grey"
    app:cardCornerRadius="@dimen/std_dp"
    app:cardElevation="@dimen/card_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/loc_txt"
            style="@style/Theme.ChallengeHiking.FrameBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/std_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="From Hyde Park to Haven St" />

        <TextView
            android:id="@+id/distance_txt"
            style="@style/Theme.ChallengeHiking.FrameBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/std_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loc_txt"
            tools:text="7.56 miles" />

        <TextView
            android:id="@+id/time_txt"
            style="@style/Theme.ChallengeHiking.FrameBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/std_dp"
            app:layout_constraintStart_toEndOf="@id/distance_txt"
            app:layout_constraintTop_toBottomOf="@id/loc_txt"
            tools:text="4.4 Hours" />

        <TextView
            android:id="@+id/challenge_txt"
            style="@style/Theme.ChallengeHiking.FrameBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/std_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/distance_txt"
            tools:text="3 Challenges" />

        <TextView
            android:id="@+id/date_txt"
            style="@style/Theme.ChallengeHiking.FrameBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/std_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="19 Jun, 2021" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>